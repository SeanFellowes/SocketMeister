{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [ "src/SocketMeister/SocketMeister.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "targetFramework": "netstandard2.0"
        }
      ],
      "output": "api"
    }
  ],
  "build": {
    "content": [
      { "files": [ "README.md" ],           "src": "." },
      { "files": [ "**/*.md", "toc.yml" ], "src": "docs", "exclude": [ "obj/**" ] },
      { "files": [ "**/*.yml" ],             "src": "api" }
    ],
    "resource": [
      { "files": [ "**/images/**" ],        "src": "docs" }
    ],
    "output": "_site",
    "template": [ "default", "statictoc" ],
    "globalMetadata": {
      "_appName": "SocketMeister",
      "_appTitle": "SocketMeister Documentation",
      "_enableSearch": true,
      "pdf": true
    }
  }
}
