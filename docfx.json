{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",

  "metadata": [
    {
      "src": [
        {
          "files": [ "src/SocketMeisterAPI/SocketMeisterAPI.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ]
        }
      ],
      "dest": "api"
    }
  ],

  "build": {
    "content": [
      { "src": ".",            "files": [ "README.md" ] },
      { "src": "docs",         "files": [ "**/*.md", "toc.yml" ],
                                "exclude": [ "obj/**" ] },
      { "src": "api",          "files": [ "**/*.yml", "toc.yml" ] }
    ],
    "resource": [
      { "src": "docs",         "files": [ "**/images/**" ] }
    ],
    "output": "_site",
    "template": [ "default", "statictoc" ],
    "globalMetadata": {
      "_appName": "SocketMeister",
      "_appTitle": "SocketMeister Documentation",
      "_enableSearch": true
    }
  }
}
