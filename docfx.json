{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        { "files": [ "src/SocketMeister/*.csproj" ] }
      ],
      "dest": "api"
    }
  ],
  "build": {
   "content": [
  { "files": [ "index.md", "README.md", "CHANGELOG.md" ] },
  { "files": [ "docs/**.md", "docs/**/toc.yml" ] }
],

    "resource": [
      { "files": [ "images/**" ] }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "",
      "_appTitle": "",
      "_enableSearch": true,
      "pdf": true
    }
  }
}