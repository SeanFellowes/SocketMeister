{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",

  "metadata": [
    {
      "src": [
        {
          "files": ["src/SocketMeister/SocketMeister.csproj"],
          "properties": [ 
           { "Configuration": "Release" },
           { "TargetFramework": "net8.0" }
         ]
        }
      ],
      "dest": "api",
    "filter": "filter.yml"
    }
  ],

  "build": {
    "content": [
      { "src": ".",            "files": [ "README.md", "toc.yml" ] },
      { "src": "docs",         "files": [ "**/*.md" ],
                                "exclude": [ "obj/**" ] },
      { "src": "api",          "files": [ "**/*.yml", "toc.yml" ],
      "exclude": [ "toc.yml" ] }
    ],
    "resource": [
      { "src": "docs",         "files": [ "**/images/**" ] }
    ],
    "output": "_site",
    "template": [ "default", "modern" ],
    "globalMetadata": {
      "_appName": "SocketMeister",
      "_appTitle": "SocketMeister Documentation",
      "_enableSearch": true
    }
  }
}
